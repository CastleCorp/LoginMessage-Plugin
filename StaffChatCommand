package com.gmail.pthomas1997.loginMessagePlugin;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

public class StaffChatCommand implements CommandExecutor{

	/**
	 * onCommand(CommandSender sender, Command cmd, String label, String[] args)
	 * Main method for /staffchat command
	 * @Override
	 */
	@Override
	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args){

		Player s = (Player)sender;
		if(s.isOp() || s.hasPermission("loginmessage.sc.send")){
			if(args.length<1){
				s.sendMessage("You must write a message. "+cmd.getUsage());
				return false;

			}
			else if(args.length>=1){
				String message = args[0];
				for(Player p:Bukkit.getOnlinePlayers()){
					if(p.hasPermission("loginmessage.sc.read")){
						p.sendMessage(ChatColor.AQUA+"[Staff] "+message+"\nFrom: "+ChatColor.GREEN+s.getDisplayName());
						return true;
					}
					else {
						s.sendMessage(cmd.getPermissionMessage());
						return true;
					}
				}
				return false;
			}
		}
		return false;
	}

}
