package com.gmail.pthomas1997.loginMessagePlugin;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

public class QuitCommand implements CommandExecutor {
	
	/**
	 * onCommand(CommandSender sender, Command cmd, String label, String[] args)
	 * When run, it will kick the player, and then broadcast a message
	 */
	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args){
		if(cmd.getName().equalsIgnoreCase("rq")){
			if(sender.isOp() || sender.hasPermission("loginmessage.rq"));
			if (sender instanceof Player) {
				Player p = (Player) sender;
				p.kickPlayer(ChatColor.RED+"RAGE!!!"+ChatColor.GREEN+"\nYou have rage-quit from the server.");
				Bukkit.getServer().broadcastMessage(ChatColor.RED+p.getDisplayName()+" has rage quit!");	
				}
				
				return true;
			}

		
		return false;
	}
}

	



